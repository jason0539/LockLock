<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 正常状态 -->

    <item android:state_pressed="false"><shape>

            <!-- 填充 -->
            <solid android:color="@android:color/transparent" />

            <!-- 描边 -->
            <stroke android:dashGap="0dp" android:dashWidth="0dp" android:width="1px" android:color="@color/jason_bg_common_green" />
        </shape></item>

    <!-- 按下 -->

    <item android:state_pressed="true"><shape>

            <!-- 填充 -->
            <solid android:color="@color/jason_bg_common_green" />

            <!-- 描边 -->
            <stroke android:dashGap="0dp" android:dashWidth="0dp" android:width="1px" android:color="@android:color/transparent" />
        </shape></item>

</selector>