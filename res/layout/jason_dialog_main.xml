<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_title"
        style="@style/jason_style_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="left"
        android:text="标题" />

    <TextView
        android:id="@+id/tv_dialog_message"
        style="@style/jason_style_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详细说明" />

    <View
        style="@style/jason_style_dialog_line_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dialog_left"
            style="@style/jason_style_dialog_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消" />

        <View
            style="@style/jason_style_dialog_line_vertical"
            android:layout_width="1px"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_dialog_right"
            style="@style/jason_style_dialog_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>